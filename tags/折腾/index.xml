	loading=&#34;lazy&#34;
	
		alt=&#34;7-Day Workouts&#34;
	
	
		class=&#34;gallery-image&#34; 
		data-flex-grow=&#34;53&#34;
		data-flex-basis=&#34;128px&#34;
	
&gt;  &lt;img src=&#34;https://www.huang-zifeng.com/p/weekly-pagefind20%E5%85%AC%E9%87%8C%E4%B8%8E%E6%B8%B8%E5%9B%AD%E4%BC%9A/IMG_0468.jpg&#34;
